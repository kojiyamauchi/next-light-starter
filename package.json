{
  "name": "next-light-starter",
  "version": "1.0.0",
  "license": "MIT",
  "main": "index.js",
  "repository": "git@github.com:kojiyamauchi/next-light-starter.git",
  "author": "kojiyamauchi <all.the.small.things@me.com>",
  "description": "This is Next.js Light Starter.",
  "dependencies": {
    "next": "latest",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "sass": "^1.32.8"
  },
  "devDependencies": {
    "@types/node": "^14.14.32",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "chokidar-cli": "^2.1.0",
    "copy-webpack-plugin": "6.3.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.21.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.9",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^6.1.1",
    "gray-matter": "^4.0.2",
    "husky": "4.3.8",
    "imagemin-webp-webpack-plugin": "^3.3.3",
    "immer": "^8.0.1",
    "json-server": "^0.16.3",
    "lint-staged": "^10.5.4",
    "node-fetch": "^2.6.1",
    "npm-check-updates": "^11.2.0",
    "npm-run-all": "^4.1.5",
    "opener": "^1.5.2",
    "prettier": "^2.2.1",
    "react-hook-form": "^6.15.4",
    "remark": "^13.0.0",
    "remark-html": "^13.0.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.12.0",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.19.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "ts-jest": "^26.5.3",
    "typescript": "4.2",
    "webpack-build-notifier": "^2.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "src/**/*.scss": "stylelint --fix",
    "next.config.js": "prettier --write",
    "base.config.*.{ts,js}": "prettier --write"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "^@/(.+)": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/src/tests/**/*.test.+(ts|tsx)"
    ]
  },
  "config": {
    "path": {
      "prefix": "/next-light-starter/"
    }
  },
  "scripts": {
    "setup": "",
    "setup:browser": "opener -a 'Google Chrome Canary' http://localhost:8000$npm_package_config_path_prefix",
    "setup:develop": "NODE_OPTIONS='--inspect' next dev -p 8000",
    "clean:images": "chokidar --silent true 'public/webps/*' -c 'rimraf public/webps/*.{png,jpg,jpeg,gif}'",
    "clean:static": "rimraf delivery/* && touch delivery/.gitkeep",
    "dev": "npm-run-all -p setup:browser setup:develop clean:images",
    "build": "next build && rimraf public/webps/*.{png,jpg,jpeg,gif}",
    "start": "next start",
    "serve": "npm-run-all -p setup:browser start",
    "static": "next build && rimraf public/webps/*.{png,jpg,jpeg,gif} && next export -o delivery/",
    "jest": "jest --passWithNoTests",
    "check-pkg": "ncu",
    "update-pkg": "ncu '/^(?!(copy-webpack-plugin|husky|@add-ignore-module-name)).*$/' -u",
    "re-install": "rm yarn.lock && rm -rf node_modules && yarn install"
  }
}
